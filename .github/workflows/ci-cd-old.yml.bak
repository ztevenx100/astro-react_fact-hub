name: 🧪 CI Pipeline (Build & Test Only)

on:
  push:
    branches: [main, develop, feature/*]
  pull_request:
    branches: [main, develop]
  workflow_dispatch:

env:
  NODE_VERSION: '18.x'

jobs:
  # 🧪 Test and Build
  test-and-build:
    name: 🧪 Test & Build
    runs-on: ubuntu-latest
    
    steps:
      - name: 📂 Checkout Repository
        uses: actions/checkout@v4

      - name: 📦 Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'

      - name: 📥 Install Dependencies
        run: npm ci

      - name: 🏗️ Build Project
        run: npm run build

      - name: 🧪 Run Tests
        run: npm run test

      - name: 🔍 Lint Code
        run: npm run lint

      - name: � Build Success
        run: |
          echo "✅ Build completed successfully!"
          echo "✅ All tests passed!"
          echo "✅ Linting passed!"
          echo ""
          echo "🚀 Ready for deployment once secrets are configured"
          echo "📖 See SETUP-SECRETS.md for deployment setup"

  # 🚀 Deployment Jobs (Disabled)
  deployment-status:
    name: � Deployment Status
    runs-on: ubuntu-latest
    needs: test-and-build
    
    steps:
      - name: 📊 Deployment Status
        run: |
          echo "🚨 DEPLOYMENT DISABLED"
          echo ""
          echo "Deployment is currently disabled because GitHub secrets are not configured."
          echo ""
          echo "To enable automatic deployment:"
          echo "1. Configure GitHub secrets (see SETUP-SECRETS.md)"
          echo "2. Use the manual deployment workflow instead"
          echo "3. Or deploy directly via Vercel CLI"
          echo ""
          echo "Manual deployment: GitHub Actions → Manual Deployment workflow"
    
    steps:
      - name: 📂 Checkout Repository
        uses: actions/checkout@v4

      - name: 🚀 Deploy to Vercel
        uses: amondnet/vercel-action@v25
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
          vercel-project-id: ${{ secrets.VERCEL_PROJECT_ID }}
          vercel-args: '--env NODE_ENV=staging'

  # 🚀 Deploy to Production  
  deploy-production:
    name: 🚀 Deploy to Production (Manual)
    runs-on: ubuntu-latest
    needs: test-and-build
    if: github.ref == 'refs/heads/main' && false  # Disabled until secrets are configured
    
    steps:
      - name: 📂 Checkout Repository
        uses: actions/checkout@v4

      - name: 🚀 Deploy to Vercel
        uses: amondnet/vercel-action@v25
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
          vercel-project-id: ${{ secrets.VERCEL_PROJECT_ID }}
          vercel-args: '--prod'

      - name: 🏥 Health Check
        run: |
          sleep 20
          curl -f https://fact-hub.vercel.app/api/health || echo "Health check failed"

      - name: 🎉 Success Notification
        run: |
          echo "🎉 Production deployment successful!"
          echo "🌐 Live at: https://fact-hub.vercel.app"
