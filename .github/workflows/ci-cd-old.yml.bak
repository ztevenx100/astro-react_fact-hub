name: ğŸ§ª CI Pipeline (Build & Test Only)

on:
  push:
    branches: [main, develop, feature/*]
  pull_request:
    branches: [main, develop]
  workflow_dispatch:

env:
  NODE_VERSION: '18.x'

jobs:
  # ğŸ§ª Test and Build
  test-and-build:
    name: ğŸ§ª Test & Build
    runs-on: ubuntu-latest
    
    steps:
      - name: ğŸ“‚ Checkout Repository
        uses: actions/checkout@v4

      - name: ğŸ“¦ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'npm'

      - name: ğŸ“¥ Install Dependencies
        run: npm ci

      - name: ğŸ—ï¸ Build Project
        run: npm run build

      - name: ğŸ§ª Run Tests
        run: npm run test

      - name: ğŸ” Lint Code
        run: npm run lint

      - name: ï¿½ Build Success
        run: |
          echo "âœ… Build completed successfully!"
          echo "âœ… All tests passed!"
          echo "âœ… Linting passed!"
          echo ""
          echo "ğŸš€ Ready for deployment once secrets are configured"
          echo "ğŸ“– See SETUP-SECRETS.md for deployment setup"

  # ğŸš€ Deployment Jobs (Disabled)
  deployment-status:
    name: ï¿½ Deployment Status
    runs-on: ubuntu-latest
    needs: test-and-build
    
    steps:
      - name: ğŸ“Š Deployment Status
        run: |
          echo "ğŸš¨ DEPLOYMENT DISABLED"
          echo ""
          echo "Deployment is currently disabled because GitHub secrets are not configured."
          echo ""
          echo "To enable automatic deployment:"
          echo "1. Configure GitHub secrets (see SETUP-SECRETS.md)"
          echo "2. Use the manual deployment workflow instead"
          echo "3. Or deploy directly via Vercel CLI"
          echo ""
          echo "Manual deployment: GitHub Actions â†’ Manual Deployment workflow"
    
    steps:
      - name: ğŸ“‚ Checkout Repository
        uses: actions/checkout@v4

      - name: ğŸš€ Deploy to Vercel
        uses: amondnet/vercel-action@v25
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
          vercel-project-id: ${{ secrets.VERCEL_PROJECT_ID }}
          vercel-args: '--env NODE_ENV=staging'

  # ğŸš€ Deploy to Production  
  deploy-production:
    name: ğŸš€ Deploy to Production (Manual)
    runs-on: ubuntu-latest
    needs: test-and-build
    if: github.ref == 'refs/heads/main' && false  # Disabled until secrets are configured
    
    steps:
      - name: ğŸ“‚ Checkout Repository
        uses: actions/checkout@v4

      - name: ğŸš€ Deploy to Vercel
        uses: amondnet/vercel-action@v25
        with:
          vercel-token: ${{ secrets.VERCEL_TOKEN }}
          vercel-org-id: ${{ secrets.VERCEL_ORG_ID }}
          vercel-project-id: ${{ secrets.VERCEL_PROJECT_ID }}
          vercel-args: '--prod'

      - name: ğŸ¥ Health Check
        run: |
          sleep 20
          curl -f https://fact-hub.vercel.app/api/health || echo "Health check failed"

      - name: ğŸ‰ Success Notification
        run: |
          echo "ğŸ‰ Production deployment successful!"
          echo "ğŸŒ Live at: https://fact-hub.vercel.app"
